<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="20dp"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="Urutkan"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/md_black_1000"></View>
        <CheckedTextView
            android:id="@+id/chk_produk_terbaru"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Produk Terbaru"
            android:textSize="15sp"
            android:textColor="@color/md_black_1000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/Color_LightGrey"></View>
        <CheckedTextView
            android:id="@+id/chk_nama_asc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Nama: A - Z"
            android:textSize="15sp"
            android:textColor="@color/md_black_1000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/Color_LightGrey"></View>
        <CheckedTextView
            android:id="@+id/chk_nama_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Nama: Z - A"
            android:textSize="15sp"
            android:textColor="@color/md_black_1000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/Color_LightGrey"></View>
        <CheckedTextView
            android:id="@+id/chk_harga_asc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Harga Rendah ke Tinggi"
            android:textSize="15sp"
            android:textColor="@color/md_black_1000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/Color_LightGrey"></View>
        <CheckedTextView
            android:id="@+id/chk_harga_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Harga Tinggi ke Rendah"
            android:textSize="15sp"
            android:textColor="@color/md_black_1000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/Color_LightGrey"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/md_black_1000"
            android:weightSum="2">
            <Button
                android:id="@+id/btn_sorting_ya"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="0.1dp"
                android:background="@color/white"
                android:shadowColor="@color/md_black_1000"
                android:text="Ya"/>
            <Button
                android:id="@+id/btn_sorting_tidak"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:shadowColor="@color/md_black_1000"
                android:text="Tidak"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>